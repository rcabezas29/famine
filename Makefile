# **************************************************************************** #
#                                   PROGRAM                                    #
# **************************************************************************** #

NAME = $(BUILD_DIR)/famine

# **************************************************************************** #
#                                     VARS                                     #
# **************************************************************************** #

CP = cp
MV = mv
MKDIR = mkdir -p
RM = rm -rf

# **************************************************************************** #
#                                   LINKER                                     #
# **************************************************************************** #

LD = ld

# **************************************************************************** #
#                                   COMPILER                                   #
# **************************************************************************** #

NASM = nasm

# **************************************************************************** #
#                                    FLAGS                                     #
# **************************************************************************** #

FLAGS = -f elf64 -g

# **************************************************************************** #
#                                   SOURCES                                    #
# **************************************************************************** #

BUILD_DIR := build
SRC_DIR := srcs
INC_DIR := includes
LIB_DIR := lib

SRCS := $(SRC_DIR)/famine.s
OBJS := $(SRCS:%.s=$(BUILD_DIR)/%.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(LD) -o $@ $(OBJS)

$(BUILD_DIR)/%.o: %.s
	mkdir -p $(dir $@)
	$(NASM) $(FLAGS) -o $@ $<

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(BUILD_DIR)

s: $(NAME)
	strace ./build/famine

g: $(NAME)
	gdb ./build/famine

run: $(NAME)
	./build/famine

re:: fclean all

.PHONY: all clean fclean re
